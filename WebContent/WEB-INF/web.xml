<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>FoodTruckMania</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
  <servlet>
  	<servlet-name>FoodTruckControllerFacade</servlet-name>
  	<servlet-class>facade.FoodTruckControllerFacade</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>FoodTruckControllerFacade</servlet-name>
  	<url-pattern>/registerUser</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>FoodTruckControllerFacade</servlet-name>
  	<url-pattern>/getFoodTrucks</url-pattern>
  	</servlet-mapping>
  <servlet-mapping>
  	<servlet-name>FoodTruckControllerFacade</servlet-name>
  	<url-pattern>/loginUser</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>FoodTruckControllerFacade</servlet-name>
  	<url-pattern>/updateUserAlerts</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>FoodTruckControllerFacade</servlet-name>
  	<url-pattern>/signUpUser</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>FoodTruckControllerFacade</servlet-name>
  	<url-pattern>/approveVendors</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>FoodTruckControllerFacade</servlet-name>
  	<url-pattern>/reserveLocation</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>FoodTruckControllerFacade</servlet-name>
  	<url-pattern>/rateTruck</url-pattern>
  </servlet-mapping>
</web-app>